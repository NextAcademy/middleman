
<%= form.label :title, "Company Title" %>
<%= form.text_field :title, type: 'text', placeholder: :tile%>

<%= form.label :url, "Company Url" %>
<%= form.text_field :url, type: 'text', placeholder: :url %>

<%= form.label :logo, "Company Logo" %>
<%= form.file_field :logo %>

<%= form.label :description, "Company Description" %>
<%= form.text_area :description, type: 'text', placeholder: "Describe your company" %>



<%#= form.label :industry %>
<%= form.select :industry, options_for_select([['Select your industry', '',  {selected: true, disabled: true, hidden: true}],['Finance and Banking'],['Tourism'],['Technology'],['Food & Beverages'],['Fashion'],['other']]), {}, {required: true} %>
<%= form.text_field :industry, id: "industry_text", style: "display: none" %>



<%#= form.label :location %>
<%= form.country_select :location, priority_countries: ["MY"] %>



<%= form.label :engineers, "Are you currently employing any engineers?" %>
<%= form.radio_button :engineers, true %>
<%= form.label :engineers, "Yes", value: true %>
<%= form.radio_button :engineers, false, checked: true%>
<%= form.label :engineers, "No", value: false %>



<%#= form.label :core_stack, 'Core tech stack' %>
<%= form.text_area :core_stack, placeholder: "What's your tech stack?"%>



<%= form.label :stage, "No. of Employees" %>
<%= form.select :stage, [["1-5"], ["5-10"],["10-15"],["15-20"],["20+"]] %>



